  {:y 213,
   :rotation 0,
   :states {:active {:x -216}, :inactive {:x -316}},
   :width 590,
   :type "image",
   :src "/raw/img/library/painting-tablet/felt-tip.png",
   :actions {:click {:id "set-current-tool", :on "click", :type "action", :params {:tool "felt-tip"}}},
   :scale-y 1,
   :x -316,
