   :rotation 0,
   :width 1920,
   :type "painting-area",
   :scale-y 1,
   :var-name "painting-tablet-image",
   :x 0,
   :scale-x 1,
   :scene-name "painting-area",
   :height 1080},
  :colors-palette
  {:y 0,
   :rotation 0,
   :width 180,
   :type "colors-palette",
   :colors ["#4479bb" "#92bd4a" "#ed91aa" "#fdc531" "#010101"],
